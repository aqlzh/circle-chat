{
	/* uview-ui 的 easycom规则 */
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom", // 隐藏系统导航栏
				"navigationBarTextStyle": "white"
			}
		}, {
			"path": "pages/msg/msg",
			"style": {
				"navigationBarTitleText": "消息"
			}
		}, {
			"path": "pages/me/me",
			"style": {
				"navigationBarTitleText": "我的"
			}
		}, {
			"path": "pages/components/detail/detail",
			"style": {
				"navigationBarTitleText": "圈详情",
				"navigationBarBackgroundColor": "#f1f1f1"
			}
		}, {
			"path": "pages/components/create/create",
			"style": {
				"navigationBarTitleText": "创建圈",
				"navigationBarBackgroundColor": "#f1f1f1"
			}
		}, {
			"path": "pages/components/search/search",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/components/chat/chat",
			"style": {
				"navigationBarTitleText": "",
				"navigationBarBackgroundColor": "#f2f2f2",
				"backgroundColorTop": "#e5e5e5",
				"backgroundColorBottom": "#e5e5e5",
				"app-plus": {
					"softinputNavBar": "none",
					"bounce": "none"
				}
			}
		}, {
			"path": "pages/components/circle-setting/circle-setting",
			"style": {
				"navigationBarTitleText": "圈设置",
				"navigationBarBackgroundColor": "#f1f1f1"
			}
		},
		{
			"path": "pages/login/login",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/login/forget",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/login/register",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/components/info/info",
			"style": {
				"navigationBarTitleText": "个人信息"
			}
		}, {
			"path": "pages/components/search-map/search-map",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/components/create-map/create-map",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/components/focus-list/focus-list",
			"style": {
				"navigationBarTitleText": "关注列表"
			}
		},
		{
			"path": "uview-ui/components/u-avatar-cropper/u-avatar-cropper",
			"style": {
				"navigationBarTitleText": "头像裁剪",
				"navigationBarBackgroundColor": "#000000"
			}
		}, {
			"path": "pages/components/info/components/change-userinfo/change-userinfo",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/components/setting/setting",
			"style": {
				"navigationBarTitleText": "设置"
			}
		}, {
			"path": "pages/components/person-info/person-info",
			"style": {
				"navigationBarTitleText": "个人资料"
			}
		}, {
			"path": "pages/components/person-signature/person-signature",
			"style": {
				"navigationBarTitleText": "个性签名"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#f1f1f1"
	},
	"tabBar": {
		"color": "#aaa",
		"selectedColor": "#0081ff",
		"borderStyle": "black",
		"backgroundColor": "#fff",
		"fontSize": "14px",
		"list": [{
				"text": "消息",
				"pagePath": "pages/msg/msg",
				"iconPath": "static/tabbar/xiaoxi.png",
				"selectedIconPath": "static/tabbar/xiaoxi_cur.png"
			},
			{
				"text": "圈子",
				"pagePath": "pages/index/index",
				"iconPath": "static/tabbar/quanzi.png",
				"selectedIconPath": "static/tabbar/quanzi_cur.png"
			},
			{
				"text": "我的",
				"pagePath": "pages/me/me",
				"iconPath": "static/tabbar/wode.png",
				"selectedIconPath": "static/tabbar/wode_cur.png"
			}
		]
	}
