{
	/* uview-ui 的 easycom规则 */
	"easycom": {
			"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
		},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "uni-app"
			}
		}
	    ,{
            "path" : "pages/message/message",
            "style" : {}
        }
        ,{
            "path" : "pages/me/me",
            "style" : {}
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#f1f1f1"
	},
	"tabBar": {
			"color": "#aaa",
			"selectedColor": "#0081ff",
			"borderStyle": "black",
			"backgroundColor": "#fff",
			"fontSize": "14px",
			"list": [
				{
					"text":"消息",
					"pagePath":"pages/message/message",
					"iconPath":"static/tabbar/xiaoxi.png",
					"selectedIconPath":"static/tabbar/xiaoxi_cur.png"
				},
				{
					"text":"圈子",
					"pagePath":"pages/index/index",
					"iconPath":"static/tabbar/quanzi.png",
					"selectedIconPath":"static/tabbar/quanzi_cur.png"
				},
				{
					"text":"我的",
					"pagePath":"pages/me/me",
					"iconPath":"static/tabbar/wode.png",
					"selectedIconPath":"static/tabbar/wode_cur.png"
				}
			]
		}
}
